{
  "name": "auto-cform",
  "version": "1.0.0",
  "watch": {
    "build": {
      "patterns": [
        "src",
        "test",
        "chrome-extension"
      ],
      "extensions": "js,jsx,svelte"
    }
  },
  "scripts": {
    "build": "cpx -C public/** public/** && rollup -c && cpx chrome-extension/**/*.* public",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "cpx": "^1.5.0",
    "npm-watch": "^0.9.0",
    "sirv-cli": "^1.0.0"
  }
}
